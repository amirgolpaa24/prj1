<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="17dp"
    android:paddingBottom="17dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/clearButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="@string/clearButtonText"
        android:layout_alignParentLeft="true"
        android:onClick="clearIntent"/>
    <Button
        android:id="@+id/refreshButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="@string/refreshButtonText"
        android:layout_toRightOf="@id/clearButton"
        android:onClick="refreshIntent"/>
    <Button
        android:id="@+id/getButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="@string/getButtonText"
        android:layout_toRightOf="@id/refreshButton"
        android:onClick="getIntent"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/clearButton"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
